{
  "name": "emmett-example-shopping-cart-pubsub",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Shopping cart example with Firestore EventStore + Realtime DB projections + PubSub MessageBus",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "test": "run-s test:unit test:int test:e2e",
    "test:unit": "glob -d -c \"node --import tsx --import tsx/cjs --test\" \"test/**/*.unit.spec.ts\"",
    "test:int": "FIRESTORE_EMULATOR_HOST=localhost:8080 FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000 PUBSUB_EMULATOR_HOST=localhost:8085 glob -d -c \"node --import tsx --import tsx/cjs --test\" \"test/**/*.int.spec.ts\"",
    "test:e2e": "FIRESTORE_EMULATOR_HOST=localhost:8080 FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000 PUBSUB_EMULATOR_HOST=localhost:8085 glob -d -c \"node --import tsx --import tsx/cjs --test\" \"test/**/*.e2e.spec.ts\"",
    "test:watch": "run-p test:unit:watch test:int:watch test:e2e:watch",
    "test:unit:watch": "glob -d -c \"node --import tsx --import tsx/cjs --test --watch\" \"test/**/*.unit.spec.ts\"",
    "test:int:watch": "FIRESTORE_EMULATOR_HOST=localhost:8080 FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000 PUBSUB_EMULATOR_HOST=localhost:8085 glob -d -c \"node --import tsx --import tsx/cjs --test --watch\" \"test/**/*.int.spec.ts\"",
    "test:e2e:watch": "FIRESTORE_EMULATOR_HOST=localhost:8080 FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000 PUBSUB_EMULATOR_HOST=localhost:8085 glob -d -c \"node --import tsx --import tsx/cjs --test --watch\" \"test/**/*.e2e.spec.ts\""
  },
  "dependencies": {
    "@emmett-community/emmett-expressjs-with-openapi": "^0.1.0",
    "@emmett-community/emmett-google-firestore": "^0.1.0",    
    "@emmett-community/emmett-google-realtime-db": "^0.1.0",
    "@emmett-community/emmett-google-pubsub": "file:../..",
    "@event-driven-io/emmett": "^0.39.1",
    "@google-cloud/firestore": "^7.11.6",
    "@google-cloud/pubsub": "^4.9.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-openapi-validator": "^5.6.0",
    "firebase-admin": "^12.7.0",
    "http-problem-details": "^0.1.7",
    "supertest": "^7.0.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "glob": "^11.0.0",
    "npm-run-all2": "^6.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  }
}
